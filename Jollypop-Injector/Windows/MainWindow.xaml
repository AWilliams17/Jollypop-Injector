<Controls:MetroWindow 
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Name="MainWindowUI" x:Class="Jollypop_Injector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Jollypop Injector" Height="329.333" Width="472.5">
    
    <Window.Resources>
        <Style x:Key="OutputListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="_Border"
                                Padding="2"
                                SnapsToDevicePixels="true">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="_Border" Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="#FF22FC00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File" x:Name="menuFileDropdown">
                <MenuItem x:Name="UpdateBtn" Header="Update" IsCheckable="False" Click="UpdateBtn_Click"/>
                <MenuItem x:Name="ExitBtn" Header="Exit" IsCheckable="False" Click="ExitBtn_Click"/>
            </MenuItem>
            <MenuItem Header="About" x:Name="menuAboutDropdown">
                <MenuItem x:Name="GithubBtn" Header="Github" IsCheckable="False" Click="GithubBtn_Click"/>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Vertical" Width="Auto">
            <TabControl Height="270" Width="502">
                <TabItem Header="Unmanaged">
                    <!-- Unmanaged DLL Injection -->
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Label Content="Target:" Width="76"/>
                            <TextBox x:Name="UnmanagedTargetTextBox" TextWrapping="Wrap" Width="384"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Label Content="DLL Path:" Width="76"/>
                            <TextBox x:Name="UnmanagedDLLPathTextBox" TextWrapping="Wrap" Width="328" IsReadOnly="True"/>
                            <Button x:Name="UnmanagedDLLPathBtn" Content="..." Width="56" Height="26" VerticalAlignment="Top" Click="UnmanagedDLLPathBtn_Click"/>
                        </StackPanel>
                        <Grid Height="100">
                            <GroupBox Header="Bitness" HorizontalAlignment="Left" Height="113" VerticalAlignment="Top" Width="94" Margin="3,11,0,-24">
                                <Grid>
                                    <RadioButton GroupName="UnmanagedBitness" Content="32 Bit" HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Margin="10,15,0,0"/>
                                    <RadioButton GroupName="UnmanagedBitness" Content="64 Bit" HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Margin="10,39,0,0" RenderTransformOrigin="0.806,-0.278"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Output" HorizontalAlignment="Left" Height="113" VerticalAlignment="Top" Width="355" Margin="102,11,0,-24">
                                <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemContainerStyle="{DynamicResource OutputListBoxItemStyle}" Background="Black" Foreground="#FF22FC00" x:Name="UnmanagedOutput" HorizontalAlignment="Left" Height="86" Margin="-4" VerticalAlignment="Top" Width="353" ItemsSource="{Binding UnmanagedOutputList, UpdateSourceTrigger=PropertyChanged}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <TextBlock TextWrapping="Wrap" Text="{Binding}"/>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </GroupBox>
                            <Button x:Name="UnmanagedInjectBtn" Content="Inject" Height="26" VerticalAlignment="Top" Margin="141,131,141,-57" Click="UnmanagedInjectBtn_Click"/>
                        </Grid>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Managed (Unity)">
                    <StackPanel>
                        <!-- Managed DLL Injection -->
                        <StackPanel Height="199">
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <Label Content="Target:" Width="76"/>
                                <TextBox x:Name="ManagedTargetTextBox" TextWrapping="Wrap" Width="150"/>
                                <Label Content="Namespace:" Width="85"/>
                                <TextBox x:Name="NamespaceTextBox" TextWrapping="Wrap" Width="147"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <Label Content="Classname:" Width="76"/>
                                <TextBox x:Name="ClassnameTextBox" TextWrapping="Wrap" Width="150"/>
                                <Label Content="Methodname:" Width="85"/>
                                <TextBox x:Name="MethodTextBox" TextWrapping="Wrap" Width="147"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <Label Content="DLL Path:" Width="76"/>
                                <TextBox x:Name="ManagedDLLPathTextBox" TextWrapping="Wrap" Width="326" IsReadOnly="True"/>
                                <Button x:Name="ManagedDLLPathBtn" Content="..." Width="56" Height="26" VerticalAlignment="Top" Click="ManagedDLLPathBtn_Click"/>
                            </StackPanel>
                            <Grid Height="93">
                                <GroupBox Header="Output" HorizontalAlignment="Left" Width="451" Margin="5,10,0,0" Height="83" VerticalAlignment="Top">
                                    <ListBox ItemContainerStyle="{DynamicResource OutputListBoxItemStyle}" Background="Black" Foreground="#FF22FC00" x:Name="ManagedOutput" HorizontalAlignment="Left" Height="56" Margin="-4" VerticalAlignment="Top" Width="449" ItemsSource="{Binding UnmanagedOutputList, UpdateSourceTrigger=PropertyChanged}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <DockPanel>
                                                    <TextBlock TextWrapping="Wrap" Text="{Binding}"/>
                                                </DockPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </GroupBox>
                                <Button x:Name="ManagedInjectBtn" Content="Inject" Height="26" VerticalAlignment="Top" Margin="141,100,141,-33" Click="ManagedInjectBtn_Click"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </DockPanel>
</Controls:MetroWindow>
